<config>	
    <sections>
         <web translate="label" module="core">
            <groups>
                <eucookie translate="label">
					<label>EU Cookie Law</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>9999</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store> 
                    <fields>
                        <eulaw translate="label">
                            <label>Enable EU Cookie Law</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </eulaw>
						<eulink translate="label">
                            <label>EU Cookie Link</label>
                            <comment><![CDATA[Enter the page URL key for example &#39;privacy-policy&#39;, if left blank no link will be displayed]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </eulink>
						<eutext translate="label">
                            <label>EU Cookie Text</label>
                            <comment><![CDATA[This will display in the popup, please wrap paragraphs as shown '&lt;p&gt;your data here&lt;/p&gt;'. <a href="http://www.w3schools.com/html/html_basic.asp" target="_blank">click here for basic html help</a><br /><b>If left blank the website will display the default paragraph.</b>]]></comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </eutext>
                    </fields>					
                </eucookie>				
			</groups>
		</web>
    </sections>
</config>
